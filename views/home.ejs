<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/main.css" />
</head>

<body>
  <div class="main-container">
    <section class="container">
      <h1 class=" container-heading">ToDo Appüìù</h1>
      <form action="/create-task" method="POST">
        <table>
          <!-- <div> -->
          <tr class="form-div-heading">
            <th class="form-heading--1">Add Task<input type="text" name="description"
                placeholder="What do you need to do?" required /></th>
            <th class="form-heading--2 options-menu">Category<select name="category" required>
                <option>PERSONAL</option>
                <option>WORK</option>
                <option>SCHOOL</option>
                <option>CLEANING</option>
                <option>OTHER</option>
              </select>
            </th>
            <th class="form-heading--3">Date<input type="date" name="date" required /></th>
          </tr>
        </table>

        <div>
          <input type="submit" class="btn btn-success" id="add" value="ADD TASK" style="margin-top: 1rem;" />
        </div>
      </form>
    </section>
    <div class="form-details-container">
      <h1 class="container-heading" style="font-size: 2rem;">Tasks ListüóíÔ∏è</h1>
      <form action="/delete-task" method="GET" class="form-div">
        <table class="table">
          <!-- <thead> -->
          <tr class="form-div-heading"></tr>
          <th>Select</th>
          <th>Task</th>
          <th>Category</th>
          <th>Due Date</th>
          </tr>
          <!-- </thead> -->
          <% for(let i of task) { %>
            <tr class="todo__category">
              <td>
                <label>
                  <input type="checkbox" name="<%= i._id %>" />
                </label>
              </td>
              <td>
                <p id="task-description">
                  <%= i.description %>
                </p>
              </td>
              <td>
                <p id="task-category">
                  <%= i.category %>
                </p>
              </td>
              <td>
                <p id="due-date">
                  <% var dateStr=(i.date).toString(); %>
                    <% var date=new Date(dateStr); %>
                      <% var options={ weekday: 'short' , month: 'short' , day: '2-digit' , year: 'numeric' }; %>
                        <%= date.toLocaleDateString('en-US', options) %>
                </p>
              </td>
            </tr>
            <% } %>
        </table>
        <div>
          <input type="submit" class="btn btn-danger" value="DELETE TASK" />
        </div>
      </form>
    </div>
  </div>
</body>